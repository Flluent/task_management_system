<h1>Создание новой задачи</h1>
<%= form_with model: @task do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.label :status %>
    <%= form.select :status, [['В процессе', 'in_progress'], ['Завершено', 'completed']] %>
  </div>
  <div>
    <%= form.label :category %>
    <%= form.text_field :category %>
  </div>
  <div>
    <%= form.label :priority %>
    <%= form.select :priority, [['Низкий', 'low'], ['Средний', 'medium'], ['Высокий', 'high']] %>
  </div>
  <%= form.submit 'Создать задачу' %>
<% end %>