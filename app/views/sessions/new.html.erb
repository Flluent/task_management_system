<h1>Вход в систему</h1>
<%= form_with url: login_path, html: { class: 'login-form' } do |form| %>
  <div class="form-group">
    <%= form.label :username, class: 'form-label' %>
    <%= form.text_field :username, class: 'form-input' %>
  </div>
  <div class="form-group">
    <%= form.label :password, class: 'form-label' %>
    <%= form.password_field :password, class: 'form-input' %>
  </div>
  <%= form.submit 'Войти', class: 'form-submit' %>
<% end %>

<div class="signup-link">
  <%= link_to 'Зарегистрироваться', signup_path, class: 'signup-text' %>
</div>
